# LongPort OpenAPI配置
LONGPORT_APP_KEY=your_app_key_here
LONGPORT_APP_SECRET=your_app_secret_here
LONGPORT_ACCESS_TOKEN=your_access_token_here
TRADE_ENV=PAPER  # PAPER或LIVE

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=trader
DB_PASSWORD=your_db_password_here
DB_NAME=option_trading
DB_POOL_SIZE=5
DB_POOL_TIMEOUT=30

# 日志配置
LOG_LEVEL=INFO
LOG_DIR=/home/options_trading/logs

# 时区设置
TZ=America/New_York

# 调试模式
DEBUG=True

# 数据存储配置
DATA_UPDATE_INTERVAL=60
DATA_RETENTION_DAYS=365
DATA_BACKUP_ENABLED=true
DATA_COMPRESSION=true

# 添加 CentOS 7 特定配置
PYTHONPATH=/home/options_trading
LD_LIBRARY_PATH=/usr/local/lib
LC_ALL=en_US.UTF-8
LANG=en_US.UTF-8
